plugin {
    tx_cfgoogleauthenticator_setup {
        view {
            layoutRootPath = EXT:cf_google_authenticator/Resources/Private/Layouts/
            partialRootPath = EXT:cf_google_authenticator/Resources/Private/Partials/
            templateRootPath = EXT:cf_google_authenticator/Resources/Private/Templates/
        }

        tx_felogin_login {
            view {
                layoutRootPath = EXT:cf_google_authenticator/Resources/Private/EXT_felogin/Layouts/
                partialRootPath = EXT:cf_google_authenticator/Resources/Private/EXT_felogin/Partials/
                templateRootPath = EXT:cf_google_authenticator/Resources/Private/EXT_felogin/Templates/
            }
        }
    }
}

[typo3.branch == "11.5"]
    plugin {
        tx_cfgoogleauthenticator_setup {
            tx_felogin_login {
                view {
                    templateRootPath = EXT:cf_google_authenticator/Resources/Private/EXT_felogin/Templates/TYPO3v11/
                }
            }
        }
    }
[global]
